{
  "name": "agatha-front-electron",
  "version": "1.0.0",
  "private": true,
  "description": "Electron wrapper for local Minechat web UI (served from bundled public/)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "prepack": "node scripts/generate-build-info.cjs",
    "predist": "node scripts/generate-build-info.cjs",
    "gen:icon": "node scripts/generate-icons.cjs",
    "postinstall": "node scripts/generate-icons.cjs",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "png-to-ico": "^2.1.8"
  },
  "dependencies": {
    "ws": "^8.0.0",
    "node-notifier": "^10.0.1",
    "socket.io-client": "^4.7.2"
  },
  "build": {
    "appId": "org.agatha.frontdev",
    "productName": "Minechat",
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "assets/**/*",
      "scripts/**/*",
      "package.json"
    ],
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
